{
  "name": "boilerplate-react",
  "version": "1.0.0",
  "description": "Simple React.js boilerplate with example tests using Jest and Enzyme",
  "author": "Matthew Quinn",
  "scripts": {
    "start": "webpack-dev-server --config ./webpack.config.js --mode development",
    "test": "jest"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/components/*.js?(x)"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/test/test-setup.js"
  },
  "devDependencies": {
    "babel-loader": "7.1.5",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "enzyme": "3.4.4",
    "enzyme-adapter-react-16": "1.2.0",
    "jest": "23.5.0",
    "webpack": "4.17.1",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.5"
  },
  "dependencies": {
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "react-router-dom": "4.3.1"
  }
}
